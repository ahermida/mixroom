{
  "name": "sudopost",
  "version": "0.0.1",
  "description": "An anonymous social app",
  "main": "dist/server.js",
  "scripts": {
    "server_build": "babel --ignore app -d dist src",
    "server_watch": "nodemon --watch src/server.js --exec \"npm run server_build\"",
    "client_build": "browserify -t [ babelify --presets [ es2015 stage-3 ] --plugins [ transform-runtime ] ] src/app/main.js -o static/bundle.js",
    "client_uglify": "uglifyjs --compress --output static/bundle.js -- static/bundle.js",
    "client_watch": "nodemon --watch src/app --exec \"npm run client_build\"",
    "css_build": "node-sass assets/styles --output static/css",
    "css_watch": "nodemon -e scss -x \"npm run css_build\"",
    "build": "npm run server_build && npm run client_build && npm run css_build",
    "watch": "npm run client_watch & npm run server_watch & npm run css_watch",
    "start": "node dist/server.js",
    "test": "mocha --compilers js:babel-register"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ahermida/sudopost.git"
  },
  "keywords": [
    "anonymous",
    "dingdong",
    "radical",
    "blue",
    "node",
    "fart-app",
    "social",
    "application"
  ],
  "author": "Albert Hermida",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ahermida/sudopost/issues"
  },
  "homepage": "https://github.com/ahermida/sudopost#readme",
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-plugin-transform-runtime": "^6.7.5",
    "babel-polyfill": "^6.7.2",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-3": "^6.5.0",
    "babel-register": "^6.7.2",
    "babel-runtime": "^6.6.1",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "mocha": "^2.4.5",
    "node-sass": "^3.4.2",
    "nodemon": "^1.9.1",
    "uglify-js": "^2.6.2"
  },
  "dependencies": {
    "co-busboy": "^1.3.1",
    "co-fs": "^1.2.0",
    "fastclick": "^1.0.6",
    "isomorphic-fetch": "^2.2.1",
    "koa": "^1.2.0",
    "koa-mount": "^1.3.0",
    "koa-route": "^2.4.2",
    "koa-static": "^2.0.0",
    "mongodb": "^2.1.7",
    "node-uuid": "^1.4.7"
  }
}
