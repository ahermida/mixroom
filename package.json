{
  "name": "dartboard",
  "version": "0.0.1",
  "description": "An anonymous social app",
  "main": "server.js",
  "scripts": {
    "server_build": "babel lib -d dist --presets es2015,stage-2",
    "server_watch": "nodemon lib/server.js --exec babel-node",
    "client_build": "browserify -t [babelify] dartboard_app/main.js -o static/bundle.js",
    "client_watch": "watchify -v -t [babelify] dartboard_app/main.js -o static/bundle.js",
    "build": "npm run server_build && npm run client_build",
    "watch": "npm run client_watch & npm run server_watch",
    "start": "node dist/server.js",
    "test": "mocha --compilers js:babel-register"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ahermida/dartboard.git"
  },
  "keywords": [
    "anonymous",
    "dingdong",
    "radical",
    "blue",
    "node",
    "social",
    "application"
  ],
  "author": "Albert Hermida",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ahermida/dartboard/issues"
  },
  "homepage": "https://github.com/ahermida/dartboard#readme",
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-2": "^6.5.0",
    "babel-register": "^6.7.2",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "mocha": "^2.4.5",
    "nodemon": "^1.9.1"
  }
}
